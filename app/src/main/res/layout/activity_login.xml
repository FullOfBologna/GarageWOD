<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@color/material_blue_grey_950">

    <TextView android:text="GarageWOD" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/GarageWOD"
        android:textColor="@color/material_deep_teal_500"
        android:textSize="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/uNameText"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/material_deep_teal_500"
        android:textSize="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/uPassTest"
        android:layout_below="@+id/uNameText"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:textColor="@color/material_deep_teal_500" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/uiLoginButton"
        android:layout_marginBottom="49dp"
        android:textColor="@color/material_deep_teal_200"
        android:background="@color/material_deep_teal_500"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:onClick="openHome"/>

</RelativeLayout>
